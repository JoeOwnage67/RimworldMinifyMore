<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Medieval Overhaul</li>
		</mods>
		<match Class="PatchOperationSequence">
		<success>Normal</success>
			<operations>		
			 	 <!--======================== Slop Pot ==============================-->
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot"]/statBases</xpath>
				    <value>
				      <minifiedDef>MinifiedThing</minifiedDef>
				      <thingCategories>
				        <li>BuildingsProduction</li>
				      </thingCategories>
				    </value>
				  </li>
				
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot"]/statBases/Flammability</xpath>
				    <value>
				      <Mass>35</Mass>
				    </value>
				  </li>
				<!--======================== Stew Pot ==============================-->
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot_Stew"]/statBases</xpath>
				    <value>
				      <minifiedDef>MinifiedThing</minifiedDef>
				      <thingCategories>
				        <li>BuildingsProduction</li>
				      </thingCategories>
				    </value>
				  </li>
				
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot_Stew"]/statBases/Flammability</xpath>
				    <value>
				      <Mass>35</Mass>
				    </value>
				  </li>
				<!--======================== Fondue Pot ==============================-->
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot_Fondue"]/statBases</xpath>
				    <value>
				      <minifiedDef>MinifiedThing</minifiedDef>
				      <thingCategories>
				        <li>BuildingsProduction</li>
				      </thingCategories>
				    </value>
				  </li>
				
				  <li Class="PatchOperationInsert">
				    <xpath>Defs/ThingDef[defName = "DankPyon_SlopPot_Fondue"]/statBases/Flammability</xpath>
				    <value>
				      <Mass>35</Mass>
				    </value>
				  </li>
			</operations>	
		</match>			
	</Operation>
</Patch>
